<div class="product-card">
    <div class="product-card__img-box">
        <img class="product-card__img" 
        rounded-[5px] 
        object-cover" 
        src="/assets/{{ product.image }}" 
        alt="Product Card">
    </div>
  
   <div class="product-card__undersection">
    <div>
        <h3 class="product-card__text">{{ product.title }}</h3>
        <p class="product-card__price"> ${{ product.price }} USD</p>
        {% if product.tags %}
            <ul class="product-card__tags">
            {% for tag in product.tags %}
                <li>{{ tag }}</li>
            {% endfor %}
            </ul>
        {% endif %}
    </div>
     <div class="product-card__cart">
       <button class="product-card__cart-icon" aria-label="cart-icon">
